{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run UI Examples",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start"
      ],
      "cwd": "${workspaceFolder}/examples/vanilla-app",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Vanilla JS",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start:js"
      ],
      "cwd": "${workspaceFolder}/examples/vanilla",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Vanilla TS",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start:ts"
      ],
      "cwd": "${workspaceFolder}/examples/vanilla",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Install Packages",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "install"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "CourierJS Tests",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test"
      ],
      "cwd": "${workspaceFolder}/@trycourier/courier-js",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
  ]
}