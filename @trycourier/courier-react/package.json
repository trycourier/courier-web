    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react": "4.4.1",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "ts-jest": "^29.1.2",
    "vite": "6.2.6",
    "vite-plugin-dts": "4.5.3"
  },
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "resolutions": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  }
