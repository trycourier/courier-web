{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "jsx": "react-jsx",
    "emitDeclarationOnly": false,
    "types": [
      "jest",
      "vite/client",
      "node"
    ],
    "paths": {
      "react": [
        "./node_modules/@types/react"
      ],
      "react-dom": [
        "./node_modules/@types/react-dom"
      ]
    }
  },
  "include": [
    "src",
    "src/components.d.ts"
  ],
  "exclude": [
    "vite.config.ts",
    "node_modules",
    "dist"
  ],
}
