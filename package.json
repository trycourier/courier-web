{
  "name": "courier-web-workspace",
  "private": true,
  "workspaces": [
    "@trycourier/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "setup": "npm install && cd @trycourier/courier-js && npm run build"
  },
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/node": "20.4.2",
    "concurrently": "8.0.0",
    "dotenv": "16.4.7",
    "jest": "29.6.4",
    "ts-jest": "29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.1.6",
    "vite": "6.2.6",
    "vite-plugin-dts": "4.5.3"
  }
}